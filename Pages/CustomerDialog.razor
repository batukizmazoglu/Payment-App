<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Name" @bind-Value="@Model.Name"></MudTextField>
        <MudTextField T="string" Label="Surname" @bind-Value="@Model.Surname"></MudTextField>
        <MudTextField T="int" Label="Age" @bind-Value="@Model.Age"></MudTextField>
        <MudTextField T="int" Label="Balance" @bind-Value="@Model.Balance"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Add</MudButton>
    </DialogActions>
</MudDialog>